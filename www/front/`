  <script type="text/javascript">
jQuery(function($){
  var list = '';
  $('.product product-details').each(function () {
    list += ($(this).children('.product-title').html());
  });
  

  var nbProducts = 0;
  $('.product').each(function () {
    nbProducts += parseFloat($('.product-quantity input').val());
  });

      var amount = $('#cart-total').html()*100;
  $("#bpost").click(function(){
      $.redirect("../demo/order.php",
      {
        name: "johnDoe",
        email: "demo@pzen.eu",
        price: amount.toFixed(0),
        submit: "name"
      },
      "POST" );
  });
});
</script>


